<div class="d-flex justify-content-center align-items-center px-4 py-5 text-center banner">
    <h1 class="display-5 fw-bold">Customize Your Favorite Movies List</h1>
  </div>

<ul>
<% @lists.each do |list| %>
<li>

  <%= cl_image_tag list.cover.key, height: 300, width: 400, crop: :fill %>

  <%= link_to list.name , list_path(list)%>
</li>
<% end %>
</ul>

<%= link_to 'New List',  new_list_path, class: 'btn btn-success' %>
